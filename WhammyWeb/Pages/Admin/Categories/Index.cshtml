@page
@model WhammyWeb.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
}

@*<partial name="_Notification" />*@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>
                &nbsp;
                Create New Category
            </a>
        </div>
    </div>

    <br />
    <br />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th>
                    Category Name
                </th>
                <th>Display Order</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class="btn-group" role="group">
                            @*passing params to other page/screen*@
                            <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>