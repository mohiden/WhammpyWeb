<form method="post">
    <input asp-for="Category.Id" type="hidden" />
    <div class="border p-3 mt-4">
        <h2 class="text-primary pl-3">Delete Category</h2>
        <hr />
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" disabled class="form-control name-input" />
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
        </div>
        <button type="submit" class="btn px-5 btn-danger">Delete</button>
        <a asp-page="Index" class="btn px-5 btn-secondary">Back to list</a>
    </div>
</form>


