@page
@model WhammyWeb.Pages.Customer.Home.IndexModel

@foreach (var cateogry in Model.Categories)
{
    <h2>@cateogry.Name</h2>
    <div class="d-flex">
        @foreach (var menuItem in Model.MenuItems.Where(m => m.CategoryId == cateogry.Id))
        {
            <div class="card mb-3" style="margin-right:20px;">
                <div class="card-body d-flex align-items-baseline justify-content-between">
                    <h5 class="card-title">@menuItem.Name</h5>
                    <h6 class="card-subtitle text-muted">$ @menuItem.Price</h6>
                </div>
                <img src="@menuItem.Image" class="" alt="menuitem image" width="300" height="300" />
                <div class="d-flex align-items-center justify-content-between mt-3 mx-3">
                    <span class="bg-success text-black p-1 px-4">@menuItem.Category.Name</span>
                    <span class="bg-info p-1 text-black px-4">@menuItem.FoodType.Name</span>
                </div>
                <div class="card-body">
                    <p class="card-text">@Html.Raw(menuItem.Description)</p>
                </div>
                <div class="card-footer text-muted">
                    <a asp-page="Details" asp-route-id="@menuItem.Id" class="btn btn-primary w-100">View Details</a>
                </div>

            </div>
        }
    </div>
}